<?xml version='1.0' encoding='utf-8'?>
<widget id="com.yourcompany.minesweeper" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>扫雷游戏</name>
    <description>
        一个现代化的扫雷游戏，支持多种难度等级
    </description>
    <author email="your-email@example.com" href="https://yourwebsite.com">
        Your Name
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="icons/icon-72x72.png" />
        <icon density="mdpi" src="icons/icon-96x96.png" />
        <icon density="hdpi" src="icons/icon-144x144.png" />
        <icon density="xhdpi" src="icons/icon-192x192.png" />
        <icon density="xxhdpi" src="icons/icon-384x384.png" />
        <icon density="xxxhdpi" src="icons/icon-512x512.png" />
        
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
        <preference name="SplashScreen" value="screen" />
        <preference name="SplashScreenDelay" value="3000" />
    </platform>
    
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="57" platform="ios" src="icons/icon-72x72.png" width="57" />
        <icon height="114" platform="ios" src="icons/icon-144x144.png" width="114" />
        <icon height="72" platform="ios" src="icons/icon-72x72.png" width="72" />
        <icon height="144" platform="ios" src="icons/icon-144x144.png" width="144" />
        <icon height="60" platform="ios" src="icons/icon-72x72.png" width="60" />
        <icon height="120" platform="ios" src="icons/icon-144x144.png" width="120" />
        <icon height="76" platform="ios" src="icons/icon-96x96.png" width="76" />
        <icon height="152" platform="ios" src="icons/icon-192x192.png" width="152" />
        <icon height="40" platform="ios" src="icons/icon-72x72.png" width="40" />
        <icon height="80" platform="ios" src="icons/icon-96x96.png" width="80" />
        <icon height="180" platform="ios" src="icons/icon-192x192.png" width="180" />
        <icon height="29" platform="ios" src="icons/icon-72x72.png" width="29" />
        <icon height="58" platform="ios" src="icons/icon-72x72.png" width="58" />
        <icon height="87" platform="ios" src="icons/icon-96x96.png" width="87" />
        <icon height="20" platform="ios" src="icons/icon-72x72.png" width="20" />
        <icon height="1024" platform="ios" src="icons/icon-512x512.png" width="1024" />
    </platform>
    
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="22" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
</widget>
